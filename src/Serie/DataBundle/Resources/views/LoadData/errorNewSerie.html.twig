{% if errors|length > 1 %}
<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<div class="alert alert-info"> 
			<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
			<strong>Info :</strong>
			Les séries suivantes sont déjà présentes dans la base de données :
			<ul>
			{% for iError in 1..errors|length-1 %}
				<li><a class="info" href="serie/{{ slug[iError] }}">{{ errors[iError] }}</a></li>				 
			{% endfor%}
			</ul>
		</div>
	</div>
</div>

{% else %}
<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<div class="alert alert-danger"> 
		  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
		  <strong>Erreur !</strong> {{ errors[0] }}.
		</div>
	</div>
</div>
{% endif %}